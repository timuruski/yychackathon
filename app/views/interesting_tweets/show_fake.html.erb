<p id="notice"><%= notice %></p>

<div id="interesting_tweet" class="row">
  <div class="col-xs-6">
    <h2>@username</h2>
    <p>Can haz cheezeburger?</p>
  </div>
  <div class="col-xs-6">
    <%= image_tag 'http://placekitten.com/200/300' %>
    <a href="/images/1/download" class="btn btn-default">Download</a>
  </div>
</div>

<div id="reply_tweet" class="row">
  <%= form_for @reply do |reply_form| %>
    <div class="col-xs-6">
      <h2>Reply</h2>
        <div class="form-group">
          <%= reply_form.hidden_field :interesting_tweet_id, value: 1 %>
          <%= reply_form.text_area :text, size: '60x8' %>
        </div>
        <div class="form-group">
          <%= reply_form.submit 'Submit', class: 'btn btn-default' %>
        </div>
    </div>
    <div class="col-xs-6">
      <%= reply_form.file_field :image %>
    </div>
  <% end %>
</div>

